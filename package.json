.spinner {
    border: 8px solid rgba(0, 0, 0, 0.1);
    border-top-color: lightblue;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    animation: spin 1s ease-in-out infinite;
}

@keyframes spin {
    to {
        transform: rotate(360deg);
    }
